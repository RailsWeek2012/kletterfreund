<% if @route.comments.length > 0 %>

<table 
    border="0" cellpadding="10" cellspacing="5"  
    summary="Table with 5px cellspacing">   
  <tr>
    <th>Kommentar</th>
    <th>Bewertung</th>
  </tr>

<% @route.comments.each do |comment| %>
  <tr>
    <td><%= comment.user_text %></td>
    <td><%= comment.user_grade %></td>
  </tr>
<% end %>
</table>
<% end %>